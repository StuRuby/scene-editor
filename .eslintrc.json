{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "react-hooks"
    ],
    "root": true,
    "rules": {
        "prettier/prettier": [
            "warn",
            {},
            {
                "usePrettierrc": false
            }
        ],
        "react-hooks/rules-of-hooks": "error", // 检查 Hook 的规则
        "react-hooks/exhaustive-deps": "warn" // 检查 effect 的依赖
    },
    "parser": "babel-eslint"
}